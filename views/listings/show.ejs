<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h2> <%=listing.title%></h2>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%=listing.image%>" class="card-img-top show-img mb-1" alt="listing-image">
            <div class="card-body">
                <p class="card-text ">
                    <!-- <b><%=listing.title%></b><br> -->
                    <%=listing.description%><br>
                    &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
                    <%=listing.location%><br>
                    <%=listing.country%><br>
                </p>
            </div>
        </div>
    </div>

    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark show-btn col-1 offset-3">Edit</a>

        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark show-btn offset-4">DELETE</button>
        </form>
    </div>
    <br>
    <hr> 
    <div class="col-8 offset-3 mb-3">
        <h2>Leave Reviews</h2>
        <form method="POST" action="/listings/<%=listing._id%>/reviews" class="needs-validation" novalidate>
        <div class="mb-2">
            <label for="rating" class="form-label">Rating:</label>
            <input type="range" min="1" max="5" name="review[rating]">
        </div>
        <div class="mb-2">
            <label for="comment" class="form-label">Comment:</label><br>
            <textarea 
                name="review[comment]"
                rows="6"
                cols="40"
                class="form-control"
                required></textarea>
            <div class="invalid-feedback">Add comments</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
</body>
