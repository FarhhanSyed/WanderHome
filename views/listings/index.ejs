<% layout("/layouts/boilerplate") %>
<body>
    <h2>All Listings</h2>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListing){ %>
        <a href="/listings/<%=listing._id%>" style="text-decoration: none;">
            <div class="card col">
            <img src="<%=listing.image%>" class="card-img-top" alt="..." style="height:20rem;">
            <div class="card-img-overlay">title</div>
            <div class="card-body" >
                <p class="card-text">
                    <b><%= listing.title%><br></b>
                    &#8377;<%=listing.price%> / night
                </p>
            </div>
        </div>
        </a>
    <% } %>
    </div>
