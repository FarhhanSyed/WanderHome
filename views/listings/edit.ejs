<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col col-8 offset-2">
            <h2>Edit Listing</h2>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PATCH" >
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input value="<%=listing.title%>" 
                    name="listing[title]" 
                    class="form-control" 
                    type="text"
                    />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" 
                        rows="5" cols="30" 
                        class="form-control"
                        >
                        <%=listing.description%>
                    </textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input value="<%=listing.image%>" 
                    name="listing[image]" 
                    class="form-control" 
                    type="text"/>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input value="<%=listing.price%>" 
                        name="listing[price]" 
                        class="form-control" 
                        type="number"
                       
                        />
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input value="<%=listing.country%>" 
                        name="listing[country]" 
                        class="form-control" 
                        type="text"
                        
                        />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input value="<%=listing.location%>" 
                    name="listing[location]" 
                    class="form-control" 
                    type="text">
                </div>

                <button class="btn btn-dark show-btn mt-3">Edit</button>
                <br><br>
            </form>
        </div>
        </div>
</body>

